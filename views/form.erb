<div class="col-md-12">
  <form action='/results' class="well well-sm" id="main-form">
    <h3>Word Instance Checker</h3>
    <div class="form-group has-feedback" id="sentence-input">
      <label for="user_sentence" class="control-label">Enter your sentence here:</label>
      <input id="user_sentence" name="user_sentence" class="form-control" type="text" placeholder="A sentence please...">
    </div>
    <div class="form-group has-feedback" id="word-input">
      <label for="word_to_check" class="control-label">Enter your word here:</label>
      <input id="word_to_check" name="word_to_check" class="form-control" type="text" placeholder="A word please...">
    </div>
    <button type="submit" class="btn btn-info disabled" id="word-checker-button">Much Go!</button>
  </form>
</div>
